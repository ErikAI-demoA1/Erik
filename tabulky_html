  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ErikAI Tabu쬶y</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
      padding: 20px;
      text-align: center;
    }
    h1 {
      color: #1d4ed8;
    }
    #tableArea {
      overflow: auto;
      margin-top: 20px;
      max-height: 400px;
      border: 1px solid #ccc;
      background: #fff;
    }
    table {
      border-collapse: collapse;
      margin: 0 auto;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 4px 8px;
      min-width: 60px;
      text-align: center;
    }
    input[type="text"] {
      width: 100%;
      box-sizing: border-box;
      border: none;
    }
    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 6px;
    }
    .save { background-color: #4ade80; }
    .load { background-color: #60a5fa; }
    .download { background-color: #facc15; }
    .clear { background-color: #f87171; }
  </style>
</head>
<body>
  <h1>游늵 ErikAI Tabu쬶y</h1>
  <p>Maxim치lne rozmery: 100 x 100 (ozna캜enie A1 a CV100)</p>
  <div id="tableArea"></div>
  <button class="save" onclick="saveTable()">游 Ulo쬴콘</button>
  <button class="load" onclick="loadTable()">游늭 Na캜칤ta콘</button>
  <button class="download" onclick="downloadCSV()">拘勇 CSV</button>
  <button class="clear" onclick="clearTable()">游빛 Vymaza콘</button>  <script>
    const maxRows = 100;
    const maxCols = 100;
    const letters = [...Array(100)].map((_, i) => {
      let label = "";
      let n = i;
      do {
        label = String.fromCharCode((n % 26) + 65) + label;
        n = Math.floor(n / 26) - 1;
      } while (n >= 0);
      return label;
    });

    const tableDiv = document.getElementById("tableArea");
    const table = document.createElement("table");
    const headerRow = document.createElement("tr");
    headerRow.appendChild(document.createElement("th"));
    for (let c = 0; c < maxCols; c++) {
      const th = document.createElement("th");
      th.textContent = letters[c];
      headerRow.appendChild(th);
    }
    table.appendChild(headerRow);
    for (let r = 0; r < maxRows; r++) {
      const row = document.createElement("tr");
      const rowHeader = document.createElement("th");
      rowHeader.textContent = r + 1;
      row.appendChild(rowHeader);
      for (let c = 0; c < maxCols; c++) {
        const td = document.createElement("td");
        const input = document.createElement("input");
        input.type = "text";
        input.id = `${letters[c]}${r + 1}`;
        td.appendChild(input);
        row.appendChild(td);
      }
      table.appendChild(row);
    }
    tableDiv.appendChild(table);

    function saveTable() {
      const data = {};
      for (let r = 1; r <= maxRows; r++) {
        for (let c = 0; c < maxCols; c++) {
          const id = `${letters[c]}${r}`;
          const val = document.getElementById(id).value;
          if (val) data[id] = val;
        }
      }
      localStorage.setItem("erikai_table_data", JSON.stringify(data));
      alert("Tabu쬶a bola ulo쬰n치.");
    }

    function loadTable() {
      const data = JSON.parse(localStorage.getItem("erikai_table_data"));
      if (data) {
        Object.keys(data).forEach(id => {
          const cell = document.getElementById(id);
          if (cell) cell.value = data[id];
        });
        alert("Tabu쬶a na캜칤tan치.");
      } else {
        alert("Nebola n치jden치 쬴adna ulo쬰n치 tabu쬶a.");
      }
    }

    function clearTable() {
      if (confirm("Naozaj chcete vymaza콘 tabu쬶u?")) {
        document.querySelectorAll("input[type=text]").forEach(input => input.value = "");
      }
    }

    function downloadCSV() {
      let csv = "";
      csv += "," + letters.slice(0, maxCols).join(",") + "\n";
      for (let r = 1; r <= maxRows; r++) {
        let row = [r];
        for (let c = 0; c < maxCols; c++) {
          const id = `${letters[c]}${r}`;
          const val = document.getElementById(id).value || "";
          row.push(`"${val.replace(/"/g, '""')}"`);
        }
        csv += row.join(",") + "\n";
      }
      const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = "erikai_tabulka.csv";
      link.click();
    }
  </script></body>
</html>
